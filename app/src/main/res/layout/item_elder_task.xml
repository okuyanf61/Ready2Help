<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ElderTaskItemIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="0"
        app:srcCompat="@mipmap/ic_waiting" />

    <TextView
        android:id="@+id/ElderTaskItemTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.3"
        android:fontFamily="@font/bold"
        android:lines="2"
        android:minLines="2"
        android:paddingStart="@dimen/nav_header_vertical_spacing"
        android:singleLine="false"
        android:text="Can you pick up my grandson\nfrom school?"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ElderTaskItemDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.7"
        android:fontFamily="@font/regular"
        android:text="11:08"
        android:textAlignment="viewEnd"
        android:textSize="13sp" />
</LinearLayout>