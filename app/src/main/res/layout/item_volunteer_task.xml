<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/VolunteerTaskItemIcon"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        app:srcCompat="@drawable/ic_no_profile_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/VolunteerTaskItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:paddingStart="@dimen/nav_header_vertical_spacing"
            android:text="Emre E."
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/VolunteerTaskItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/nav_header_vertical_spacing"
            android:text="Can you pick me up?" />
    </LinearLayout>

    <TextView
        android:id="@+id/VolunteerTaskItemDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.7"
        android:fontFamily="@font/regular"
        android:text="Fri"
        android:textAlignment="viewEnd"
        android:textSize="13sp" />
</LinearLayout>